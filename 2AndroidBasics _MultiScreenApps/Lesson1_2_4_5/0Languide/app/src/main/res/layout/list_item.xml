<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_visualImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFCDD2"
        android:contentDescription="@string/imagePlaceholder"
        android:src="@drawable/number_one" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_hindiTranslation"
            style="@style/listViewHindiStyling"
            android:background="#B5E1B7"
            android:textColor="@color/black"
            tools:text="एक(१)" />

        <TextView
            android:id="@+id/list_item_engTranslation"
            style="@style/listViewEngStyling"
            android:background="#C8E6C9"
            android:textColor="@color/black"
            tools:text="One(1)" />

    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_playPauseImage"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#B3E5FC"
        android:contentDescription="@string/imagePlaceholder"
        android:src="@drawable/play_pause_button" />

</LinearLayout>